<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clonetrol" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appBlueLight</item>
        <item name="colorPrimaryVariant">@color/appBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appBlueLight</item>
        <item name="colorSecondaryVariant">@color/appBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextInputLayoutAppStyle" parent="Widget.Design.TextInputLayout">
        <item name="endIconTint">?attr/colorPrimary</item>
        <item name="endIconTintMode">src_in</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="boxStrokeErrorColor">@android:color/holo_red_dark</item>
        <item name="errorTextColor">@android:color/holo_red_dark</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="EditTextLayoutAppStyle">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>