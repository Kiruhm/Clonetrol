<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_contact_image"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_centerInParent="true"
        android:src="@drawable/outline_face_black_48"
        app:civ_border_color="?attr/colorPrimaryVariant"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/nameContactTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Clon Juan"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/typeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="20dp"
        app:srcCompat="@drawable/outline_face_black_36" />

</LinearLayout>

